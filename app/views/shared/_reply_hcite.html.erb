<article class="response p-comment h-cite" id="comment-<%= webmention.id %>">
	<div class="response-content e-content">
		<%= raw webmention.entry_content %>
	</div>

	<footer class="response-footer">
		<p>
			<%= link_to raw(%Q{#{image_tag(webmention.author_photo, class: 'avatar u-photo')} <span class="p-name">#{webmention.author_name}</span>}), webmention.author_url, class: 'p-author h-card' %>
			responded via <%= link_to URI.parse(webmention.entry_url).host, webmention.entry_url, class: 'permalink u-url' %> on
			<time class="dt-published" datetime="<%= webmention.published_at.to_s(:iso8601) %>"><%= raw webmention.published_at.to_s(:display) %></time>.
		</p>
	</footer>
</article>