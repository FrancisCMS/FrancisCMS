<article class="h-entry">
	<header>
		<h1 class="p-name">
			<%= link_to link.title, link.url %>
			<%= '(Draft)' unless link.published_at? %>
		</h1>
	</header>

	<% if link.body? %>
		<div class="e-content">
			<%= link.to_html %>
		</div>
	<% end %>

	<% if link.published_at? %>
		<footer>
			<p>Saved on <%= link_to %Q{<time class="dt-published" datetime="#{link.published_at.to_s(:iso8601)}">#{link.published_at.to_s(:display)}</time>}, link_path(link.id), class: 'u-url' %>.</p>
		</footer>
	<% end %>
</article>