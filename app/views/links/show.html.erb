<h1><%= @link.title %></h1>

<dl>
	<dt>URL</dt>
	<dd><%= @link.url %></dd>
	<dt>Body</dt>
	<dd><%= @link.body %></dd>
	<dt>Published_at</dt>
	<dd><%= @link.published_at %></dd>
</dl>

<menu role="menu">
	<li><%= link_to 'Edit', edit_link_path(@link) %></li>
	<li>
		<%= form_tag link_path(@link), method: :delete do %>
			<button>Delete</button>
		<% end %>
	</li>
</menu>