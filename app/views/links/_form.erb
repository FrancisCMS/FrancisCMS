<ul>
	<li>
		<label for="link_url">URL</label>
		<input type="url" id="link_url" name="link[url]" required value="<%= @link.url %>">
	</li>
	<li>
		<label for="link_title">Title</label>
		<input type="text" id="link_title" name="link[title]" required value="<%= @link.title %>">
	</li>
	<li>
		<label for="link_body">Body</label>
		<textarea id="link_body" name="link[body]"><%= @link.body %></textarea>
	</li>
	<li>
		<label for="link_tag_list">Tags</label>
		<input type="text" id="link_tag_list" name="link[tag_list]" value="<%= @link.tag_list %>">
	</li>
	<li>
		<label for="link_is_draft">
			<input type="hidden" name="link[is_draft]" value="0">
			<input type="checkbox" id="link_is_draft" name="link[is_draft]" value="1"<%= ' checked' unless @link.published_at? %>>
			Save as draft
		</label>
	</li>
	<li>
		<button type="submit">Submit</button>
	</li>
</ul>