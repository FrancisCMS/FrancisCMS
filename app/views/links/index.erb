<% content_for :main_classes do %>h-feed<% end %>

<header>
	<h1 class="p-name">Links</h1>
</header>

<% if @links.any? %>
	<ol reversed>
		<% @links.each do |link| %>
			<li>
				<%= partial 'shared/link_hentry', locals: { link: link } %>
			</li>
		<% end %>
	</ol>
<% else %>
	<p>No links found!</p>
<% end %>

<footer>
	<%= partial 'shared/author_hcard' %>
</footer>