<%- if @post.errors.any? -%>
	<h2><%= pluralize(@post.errors.count, 'error') %> prevented this post from being saved:</h2>

	<ul>
		<%- @post.errors.full_messages.each do |msg| -%>
			<li><%= msg %>.</li>
		<%- end -%>
	</ul>
<%- end -%>

<%= form_for @post do |f| %>
	<ul>
		<li>
			<%= f.label :title %>
			<%= f.text_field :title, required: true %>
		</li>
		<li>
			<%= f.label :slug, 'URL' %>
			<div class="url-field">
				<div class="url-prefix"><%= posts_url %>/</div>
				<div class="url-input">
					<%= f.text_field :slug, placeholder: 'an-example-post-url', required: true %>
				</div>
			</div>
		</li>
		<li>
			<%= f.label :body %>
			<%= f.text_area :body, required: true %>
		</li>
		<li>
			<%= f.label :excerpt %>
			<%= f.text_field :excerpt, maxlength: 255 %>
		</li>
		<li>
			<%= f.label :is_draft do %>
				<%= f.check_box :is_draft, { checked: !@post.published_at? } %>
				Save as draft
			<% end %>
		</li>
		<li>
			<button type="submit">Submit</button>
		</li>
	</ul>
<% end %>