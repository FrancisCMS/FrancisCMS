<% if logged_in? %>
	<% content_for :admin_panel do %>
		<menu class="local" role="menu">
			<li role="menuitem"><%= link_to 'Edit', edit_post_path(@post) %></li>
			<li role="menuitem">
				<%= partial 'shared/delete_form', locals: { action: post_path(@post) } %>
			</li>
		</menu>
	<% end %>
<% end %>

<article class="single h-entry h-as-article">
	<header class="single-header">
		<h1 class="single-title p-name">
			<%= @post.title %>
			<%= link_to 'Draft', edit_post_path(@post), class: 'draft' unless @post.published_at? %>
		</h1>

		<% if @post.published_at? %>
			<p>Published on <time class="dt-published" datetime="<%= @post.published_at.to_s(:iso8601) %>"><%= @post.published_at.to_s(:display) %></time>.</p>
		<% end %>
	</header>

	<div class="single-content e-content">
		<%= @post.to_html %>
	</div>

	<aside class="responses" id="responses" role="complementary">
		<%= partial 'shared/webmention_form', locals: { target: post_url(@post) } %>

		<% if @post.webmentions.any? %>
			<%= partial 'shared/webmentions', locals: { resource: @post } %>
		<% end %>
	</aside>

	<footer role="complementary">
		<ul class="single-meta">
			<li>“<%= link_to @post.title, post_path(@post), class: 'u-url' %>” is also available as <%= link_to 'JSON', post_json_path(@post), rel: 'alternate', type: 'application/json' %>.</li>
			<% if @post.tags.any? %>
			<li>
				<%= partial 'shared/tags', locals: { resource: @post } %>
			</li>
			<% end %>
			<% if @post.syndications.any? %>
				<li>
					<%= partial 'shared/syndications', locals: { resource: @post } %>
				</li>
			<% end %>
		</ul>

		<%= partial 'shared/author_hcard' %>
	</footer>
</article>