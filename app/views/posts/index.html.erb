<%- @page_title = "Posts#{' â€“ Page ' + params[:page] if params[:page].to_i > 1}" -%>
<%- content_for :main_classes, 'h-feed' -%>

<header class="content-header">
	<h1 class="p-name">Posts</h1>
</header>

<div class="content-container">
	<%- if @posts.any? -%>
		<ol class="entries" reversed>
			<%- @posts.each do |post| -%>
				<li>
					<%= render 'shared/post_hentry', post: post %>
				</li>
			<%- end -%>
		</ol>

		<%= will_paginate @posts %>
	<%- else -%>
		<p>No posts found!</p>
	<%- end -%>
</div>

<footer class="content-footer">
	<%= render 'shared/author_hcard' %>
</footer>