<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title><%= Settings.site.title %>: Posts</title>
		<atom:link rel="self" href="<%= posts_url(format: :rss) %>" />
		<link><%= posts_url %></link>
		<description>Recent posts from <%= Settings.site.title %> â€” <%= Settings.site.description %></description>
		<pubDate><%= @posts.first.published_at.to_s(:rfc822) if @posts.any? %></pubDate>
		<managingEditor><%= Settings.user.email %> (<%= Settings.user.name %>)</managingEditor>
		<webMaster><%= Settings.user.email %> (<%= Settings.user.name %>)</webMaster>
		<language><%= Settings.site.language %></language>
		<copyright><%= Settings.license.title %></copyright>

		<%- @posts.each do |post| -%>
			<item>
				<guid><%= post_url(post) %></guid>
				<title><%= post.title %></title>
				<link><%= post_url(post) %></link>
				<pubDate><%= post.published_at.to_s(:rfc822) %></pubDate>
				<%- if post.body? -%>
					<description>
						<![CDATA[
							<%= raw post.to_html %>
						]]>
					</description>
				<%- end -%>
				<%- if post.tags.any? -%>
					<%- post.tags.each do |tag| -%>
						<category><%= tag.name %></category>
					<%- end -%>
				<%- end -%>
			</item>
		<%- end -%>
	</channel>
</rss>