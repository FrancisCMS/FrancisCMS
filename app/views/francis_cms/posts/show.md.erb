---
title: <%= raw @post.title %>
permalink: <%= post_url @post %>
<%- if @post.published_at? -%>
published: <%= @post.published_at.to_s(:iso8601) %>
<%- end -%>
updated: <%= @post.updated_at.to_s(:iso8601) %>
<%- if @post.excerpt -%>
excerpt: <%= raw @post.excerpt %>
<%- end -%>
<%- if @post.sorted_tags.any? -%>
tags:
<%- @post.sorted_tags.each do |tag| -%>
  - <%= tag.name %>
<%- end -%>
<%- end -%>
<%- if @post.syndications.any? -%>
syndications:
<%- @post.syndications.each do |syndication| -%>
  - name: <%= syndication.name %>
    url: <%= syndication.url %>
<%- end -%>
<%- end -%>
---

<%= raw @post.body %>