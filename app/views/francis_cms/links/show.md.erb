---
title: <%= raw @link.title %>
url: <%= @link.url %>
permalink: <%= link_url(@link) %>
<%= "published: #{@link.published_at.to_s(:iso8601)}" if @link.published_at? %>
updated: <%= @link.updated_at.to_s(:iso8601) %>
<%= "tags: #{@link.tags.collect { |tag| tag.name }.join(' ')}" if @link.tags.any? %>
