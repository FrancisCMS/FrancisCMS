---
title: <%= raw @link.title %>
permalink: <%= link_url @link %>
bookmark: <%= @link.url %>
<%- if @link.published_at? -%>
published: <%= @link.published_at.to_s(:iso8601) %>
<%- end -%>
updated: <%= @link.updated_at.to_s(:iso8601) %>
<%- if @link.tags.any? -%>
tags:
<%- @link.sorted_tags.each do |tag| -%>
  - <%= tag.name %>
<%- end -%>
<%- end -%>
<%- if @link.syndications.any? -%>
syndications:
<%- @link.syndications.each do |syndication| -%>
  - name: <%= syndication.name %>
    url: <%= syndication.url %>
<%- end -%>
<%- end -%>
---

<%= raw @link.body %>

[Visit “<%= @link.title %>”](<%= @link.url %>)