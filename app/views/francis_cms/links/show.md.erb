---
title: <%= raw @link.title %>
url: <%= @link.url %>
permalink: <%= link_url(@link) %>
<%- if @link.published_at? -%>
published: <%= @link.published_at.to_s(:iso8601) %>
<%- end -%>
updated: <%= @link.updated_at.to_s(:iso8601) %>
<%- if @link.tags.any? -%>
tags:
<%- @link.sorted_tags.each do |tag| -%>
  - <%= tag.name %>
<%- end -%>
<%- end -%>
---

<%= raw @link.body %>