<%- @page_title = 'Tags' -%>

<header class="content-header">
	<h1>Tags</h1>
</header>

<div class="content-container">
	<%- if @tags.any? -%>
		<ol class="tags">
			<%- @tags.each do |tag| -%>
				<li><%= link_to tag.name, tag_path(tag) %></li>
			<%- end -%>
		</ol>
	<%- else -%>
		<p>No tags found!</p>
	<%- end -%>
</div>

<footer class="content-footer">
	<%= render 'francis_cms/shared/author_hcard' %>
</footer>