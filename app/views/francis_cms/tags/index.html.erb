<%- @page_title = 'Tags' -%>

<header class="content-header">
	<h1>Tags</h1>
	<small>All <%= pluralize @total_tags, 'tag' %></small>
</header>

<div class="content-container">
	<%- if @grouped_tags.any? -%>
		<dl class="tags-list">
			<%- @grouped_tags.each do |letter, tags| -%>
				<dt><%= letter %></dt>
				<dd>
					<ol>
						<%- tags.each do |tag| -%>
							<li><%= link_to tag.name, tag_path(tag) %></li>
						<%- end -%>
					</ol>
				</dd>
			<%- end -%>
		</dl>
	<%- else -%>
		<p>No tags found!</p>
	<%- end -%>
</div>

<footer class="content-footer">
	<%= render 'francis_cms/shared/author_hcard' %>
</footer>