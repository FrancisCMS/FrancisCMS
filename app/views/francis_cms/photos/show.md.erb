---
title: <%= raw @photo.title %>
permalink: <%= photo_url(@photo) %>
<%- if @photo.published_at? -%>
published: <%= @photo.taken_at? ? @photo.taken_at.to_s(:iso8601) : @photo.published_at.to_s(:iso8601)  %>
<%- end -%>
updated: <%= @photo.updated_at.to_s(:iso8601) %>
<%- if @photo.tags.any? -%>
tags:
<%- @photo.sorted_tags.each do |tag| -%>
  - <%= tag.name %>
<%- end -%>
<%- end -%>
<%- if @photo.geolocated? -%>
location:
<%- if @photo.city -%>
  city: <%= @photo.city %>
<%- end -%>
<%- if @photo.state -%>
  state: <%= @photo.state %>
<%- end -%>
<%- if @photo.country -%>
  country: <%= @photo.country %>
<%- end -%>
  url: https://www.openstreetmap.org/#map=15/<%= @photo.latitude %>/<%= @photo.longitude %>
<%- end -%>
---

<%= image_tag @photo.photo.url(:medium_jpg), alt: '', srcset: %{#{asset_path @photo.photo.url(:small_jpg)} 500w, #{asset_path @photo.photo.url(:medium_jpg)} 750w, #{asset_path @photo.photo.url(:large_jpg)} 1000w} %>

<%= raw @photo.body %>