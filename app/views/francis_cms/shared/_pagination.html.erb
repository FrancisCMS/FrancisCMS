<div class="pagination">
	<%- if resource.newer -%>
		<%= link_to 'Newer', send("#{resource_type}_path", resource.newer), class: 'previous_page', rel: 'prev', title: "Navigate to “#{resource.newer.title}”" %>
	<%- end -%>
	<%- if resource.older -%>
		<%= link_to 'Older', send("#{resource_type}_path", resource.older), class: 'next_page', rel: 'next', title: "Navigate to “#{resource.older.title}”" %>
	<%- end -%>
</div>